{% extends "layout.njk" %}

{% set page = 'contact' %}

{% block head %}
   <meta name="description" content="We'd love to talk about how we can help unleash creativity for your business!  Schedule a free discovery call today!" />
   <link rel="stylesheet" href="css/contact.css">

   <!-- Calendly link widget begin -->
   <link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet">
   <style>
      head, body {
         height: initial;
      }
      body {
         overflow:initial;
      }
   </style>
   <script src="https://assets.calendly.com/assets/external/widget.js"></script>
   <!-- Calendly link widget end -->

   <title>Contact | Vihanti Digital Services</title>
{% endblock %}

{% block content %}
   <section class="section is-fullwidth">
      <div class="columns is-centered">
         <div class="column is-8">
            <div class="content">
               <h1 class="title">Contact Us</h1>

               <p>We'd love to talk about how we can help unleash creativity
               for your business!</p>

               <p class="has-text-centered">
                  <button class="button is-rounded is-info"
                          onclick="Calendly.initPopupWidget({url: 'https://calendly.com/vihanti/discovery'});return false;">
                     Schedule Free Discovery Call
                  </button>
               </p>

               <p>Or, if you prefer, here are some other ways to contact us.</p>

               <div>
                  <span class="icon is-small"><i class="far fa-envelope"></i></span>
                  <a href="mailto:hello@vihanti.com">hello@vihanti.com</a>
               </div>
               <div>
                  <span class="icon is-small"><i class="fab fa-whatsapp"></i></span>
                  <a href="tel:+17209885523">+1 720-988-5523</a>
               </div>
            </div>

            <form action="https://formspree.io/xjvyaqne" method="POST">
               <div class="field">
                  <label class="label">Name</label>
                  <div class="control has-icons-left has-icons-right">
                     <input name="name" class="input" type="text" required>
                     <span class="icon is-small is-left"><i class="fas fa-user"></i></span>
                     <span class="icon is-small is-right is-success is-hidden"><i class="fas fa-check"></i></span>
                     <span class="icon is-small is-right is-danger is-hidden"><i class="fas fa-exclamation-triangle"></i></span>
                  </div>
               </div>

               <div class="field">
                  <label class="label">Email</label>
                  <div class="control has-icons-left has-icons-right">
                     <input name="_replyto" class="input" type="email" required>
                     <span class="icon is-small is-left"><i class="fas fa-envelope"></i></span>
                     <span class="icon is-small is-right is-success is-hidden"><i class="fas fa-check"></i></span>
                     <span class="icon is-small is-right is-danger is-hidden"><i class="fas fa-exclamation-triangle"></i></span>
                  </div>
               </div>

               <div class="field">
                 <label class="label">Message</label>
                 <div class="control">
                   <textarea name="message" class="textarea" required></textarea>
                 </div>
               </div>

               <div class="field">
                 <div class="control">
                   <button class="button is-link">Send</button>
                 </div>
               </div>
            </form>
         </div>
      </div>
   </section>
{% endblock %}

